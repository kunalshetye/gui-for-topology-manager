{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "outDir": "dist/app"
  },
   "filesGlob": [
    "src/**/*.ts",
    "typings/*.d.ts"
  ],
  "typeRoots": [
    "node_modules/@types"
  ],
  "types": [
    "core-js",
    "node"
  ],
    "exclude": [
      "gulpfile.ts",
      "node_modules"
    ]
}
